FROM oven/bun:1.0 as base

WORKDIR /app

# Install Chrome and its dependencies
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libgbm1 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    xdg-utils \
    lsb-release \
    libcairo2 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf2.0-0 \
    libxss1 \
    libnss3 \
    libnspr4

# Install Chrome
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google.list && \
    apt-get update && \
    apt-get install -y google-chrome-stable

# Create a modified package.json with only needed workspaces
RUN echo '{"name":"trump-fun","private":true,"workspaces":["packages/agent","packages/common"]}' > /app/package.json

# Copy package.json files for needed workspaces
COPY packages/agent/package.json ./packages/agent/
COPY packages/common/package.json ./packages/common/
COPY bun.lock ./

# Install dependencies
RUN bun install 

# Copy source code
COPY packages/agent ./packages/agent
COPY packages/common ./packages/common

# Create logs directory
RUN mkdir -p /app/packages/agent/logs

# Set environment variables
ENV NODE_ENV=production
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
# Add no-sandbox flags for Puppeteer
ENV PUPPETEER_ARGS="--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage"

# Set the working directory to the agent package
WORKDIR /app/packages/agent

# Expose port for the API
EXPOSE 3010

# Run the server
CMD ["bun", "run", "server.ts"] 